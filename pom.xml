                <printer.charset>8859_4</printer.charset>
            </properties>
        </profile>
        <profile>
            <id>testExternal</id>
            <properties>
                <tvedere.database.host>10.4.40.54</tvedere.database.host>
                <printer.packingslip>packingSlipPrinter</printer.packingslip>
