    <profiles>
        <profile>
            <id>db-schema-create-drop</id>
            <properties>
                <tvedere.hibernate.hbm2ddl.auto>create-drop</tvedere.hibernate.hbm2ddl.auto>
            </properties>
        </profile>
        <profile>
            <id>db-schema-update</id>
            <properties>
                <tvedere.hibernate.hbm2ddl.auto>update</tvedere.hibernate.hbm2ddl.auto>
            </properties>
        </profile>
        <profile>
            <id>db-schema-none</id>
            <properties>
                <tvedere.hibernate.hbm2ddl.auto>none</tvedere.hibernate.hbm2ddl.auto>
            </properties>
        </profile>
        <profile>
            <id>db-mysql</id>
            <properties>
                <tvedere.database.driverClassName>com.mysql.jdbc.Driver</tvedere.database.driverClassName>
                <tvedere.database.url>jdbc:mysql://${tvedere.database.host}:3306/tvederedb</tvedere.database.url>
                <tvedere.database.username>tvedere</tvedere.database.username>
                <tvedere.database.password>tvedere</tvedere.database.password>
                <tvedere.database.validationQuery>select 1</tvedere.database.validationQuery>
                <tvedere.hibernate.dialect>org.hibernate.dialect.MySQL5InnoDBDialect</tvedere.hibernate.dialect>
                <tvedere.import.data/>
            </properties>
        </profile>
        <profile>
            <id>db-hsql</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <tvedere.database.driverClassName>org.hsqldb.jdbcDriver</tvedere.database.driverClassName>
                <tvedere.database.url>jdbc:hsqldb:mem:tvederedb</tvedere.database.url>
                <tvedere.database.username>sa</tvedere.database.username>
                <tvedere.database.password/>
                <tvedere.database.validationQuery/>
                <tvedere.hibernate.dialect>org.hibernate.dialect.HSQLDialect</tvedere.hibernate.dialect>
                <tvedere.hibernate.hbm2ddl.auto>create-drop</tvedere.hibernate.hbm2ddl.auto>
                <tvedere.import.data>
                    <![CDATA[<import resource="classpath:META-INF/appContext-data.xml" />]]>
                </tvedere.import.data>
            </properties>
        </profile>
